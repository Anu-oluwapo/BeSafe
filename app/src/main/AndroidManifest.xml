<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.besafe">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".volunteer"
            android:label="Volunteer"
            android:parentActivityName=".MainActivity"></activity>
        <activity
            android:name=".Donate"
            android:label="Donate"
            android:parentActivityName=".MainActivity"
            />
        <activity
            android:name=".Askhelp"
            android:label="Ask for help"
            android:parentActivityName=".UserProfiles" />
        <activity
            android:name=".Telephone"
            android:label="Phone"
            android:parentActivityName=".UserProfiles" />
        <activity
            android:name=".Place"
            android:label="Place"
            android:parentActivityName=".UserProfiles"/>
        <activity
            android:name=".Eyewitness"
            android:label="Eye Witnesses"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".UnsafeAreas"
            android:label="Unsafe Areas"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Events"
            android:label="Events"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".WomenHeroes"
            android:label="Women Heroes"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".UserProfiles"
            android:label="Profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UserListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RegisterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LoginActivity"
            android:label="Login"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Sharepost"
            android:label="Share Post"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Contact"
            android:label="Reach Out"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".About"
            android:label="@string/title_activity_about"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".OnLoad"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>